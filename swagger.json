  "host": "https://mc1.massca.st:13337",
  "basePath": "/api",
  "schemes": [
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/learning-resources": {
      "get": {
        "description": "Returns all learning resources",
        "operationId": "findLearningResources",
        "produces": [
          "application/json"
        ],
        "parameters": [{
          "name": "tags",
          "in": "query",
          "description": "tags to filter by",
          "required": false,
          "type": "array",
          "items": {
            "type": "string"
          },
          "collectionFormat": "csv"
        }],
        "responses": {
          "200": {
            "description": "learning-resources response",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/LearningResource"
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/ErrorModel"
            }
          }
        }
      },
      "post": {
        "description": "Creates a new learning resource.",
        "operationId": "addLearningResource",
        "produces": [
          "application/json"
        ],
        "parameters": [{
          "name": "learning-resource",
          "in": "body",
          "description": "LearningResource to add to the store",
          "required": true,
          "schema": {
            "$ref": "#/definitions/LearningResourceInput"
          }
        }],
        "responses": {
          "200": {
            "description": "learning-resource response",
            "schema": {
              "$ref": "#/definitions/LearningResource"
            }
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/ErrorModel"
            }
          }
        }
      }
    },
    "/learning-resources/{id}": {
      "get": {
        "description": "Returns a learning resource based on a single ID, if the user has access to the learning resource",
        "operationId": "findLearningResourceById",
        "produces": [
          "application/json"
        ],
        "parameters": [{
          "name": "id",
          "in": "path",
          "description": "ID of learning resource to fetch",
          "required": true,
          "type": "integer",
          "format": "int64"
        }],
        "responses": {
          "200": {
            "description": "learning resource response",
            "schema": {
              "$ref": "#/definitions/LearningResource"
            }
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/ErrorModel"
            }
          }
        }
      },
      "delete": {
        "description": "deletes a single learning resource based on the ID supplied",
        "operationId": "deleteLearningResource",
        "parameters": [{
          "name": "id",
          "in": "path",
          "description": "ID of learning resource to delete",
          "required": true,
          "type": "integer",
          "format": "int64"
        }],
        "responses": {
          "204": {
            "description": "learning resource deleted"
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/ErrorModel"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "LearningResource": {
      "type": "object",
      "required": [
        "id",
        "name"
      ],
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "languages": {
          "type": "string"
        }
      }
    },
    "LearningResourceInput": {
      "type": "object",
      "allOf": [{
        "$ref": "#/definitions/LearningResource"
      }, {
        "required": [
          "name"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          }
        }
      }]
    },
    "ErrorModel": {
      "type": "object",
      "required": [
        "code",
        "message"
      ],
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        }
      }
    }
  }
}
